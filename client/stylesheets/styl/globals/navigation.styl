@import '../settings.import'

#wrapper
  box-shadow 0 0 53px 0 hsla($black, 0.55)
  max-width 1920px

.container
  margin 0
  max-width 1920px
  width 100%
  padding-left 0
  padding-right 0

.fixed-header
  #header-navbar
    left 0
    position fixed
    right 0
    top 0
    width 100%
    z-index 999
  #page-wrapper
    padding-top 50px

.navbar
  a
    max-height 50px
    padding 4px 2px
  > .container
    .navbar-brand
      background darken($menu-color, 20%)
      color $white
      width 220px
      padding 10px 15px
      margin-left -8px
      @media desktopDown
        background transparent

#logo
  display table
  float left
  padding-left 18px
  &:hover
    text-decoration none
  > img
    display table-cell
    width 40px
    height 40px
    border-radius 50%
  > span
    display table-cell
    vertical-align middle
    padding-left 10px
    font-size 22px
    color $menu-color

#header-navbar
  background $white
  border 0 none
  border-radius 0
  background-clip padding-box
  margin 0
  min-height 50px
  color $black
  box-shadow 0 1px 3px 0 hsla($black, 0.1)
  position relative
  z-index 99
  .nav
    > li
      position relative
      display block
      float left
      > div
        position relative
        float left
        width 100px
        height 50px
        > button
          align(vertical)
      > a
        font-size 15px
        padding-left 18px
        padding-right 18px
        color $black
        text-shadow none
        border none
        border-radius 0
        background-clip padding-box
        cursor pointer
        > span.count
          background none repeat scroll 0 0 $danger-color
          box-shadow 0 0 0 2px $fill-color
          border-radius 50%
          background-clip padding-box
          color $fill-color
          display block
          font-size 9px
          height 16px
          line-height 16px
          position absolute
          right 9px
          text-align center
          top 9px
          width 16px

#page-wrapper
  background-color $menu-color

#content-wrapper
  background-color $body-background-color
  float left
  height 100%
  width 100%
  margin-top 0
  margin-bottom 0
  position relative
  min-height 1200px