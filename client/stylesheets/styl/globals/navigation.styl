@import '../settings.import'

#wrapper
  max-width 1920px

.container
  margin 0
  max-width 1920px
  width 100%
  padding-left 0
  padding-right 0

.fixed-header
  #header-navbar
    left 0
    position fixed
    right 0
    top 0
    width 100%
    z-index 999
  #page-wrapper
    padding-top 50px
    @media mobile
      padding-top 90px

#header-navbar
  background $white
  border 0 none
  border-radius 0
  background-clip padding-box
  margin 0
  height 50px
  color $black
  box-shadow 0 1px 3px 0 hsla($black, 0.1)
  position relative
  z-index 99
  @media mobile
    height 90px

.header
  #logo
    position relative
    float left
    width 300px
    background transparent
    color $white
    padding 10px
    padding-left 20px
    &:hover, &:focus
      text-decoration none
      outline none
    @media mobile
      width 100%
    > img
      float left
      width 32px
      height 32px
      border-radius 50%
    > span
      float left
      align(vertical)
      padding-left 10px
      font-size 22px
      color $menu-color
  #header-nav
    float right
    padding 0 20px
    @media mobile
      float left
      width 100%
    > .nav
      @media mobile
        margin 0
      > li
        position relative
        display block
        float left
        @media mobile
          col(1/3)
        > div
          position relative
          float left
          width 100px
          height 50px
          > button
            align(vertical)
        > a
          font-size 15px
          color $black
          text-shadow none
          border none
          border-radius 0
          background-clip padding-box
          cursor pointer
          text-align center

#page-wrapper
  background-color $menu-color

#content-wrapper
  background-color $body-background-color
  float left
  height 100%
  width 100%
  margin-top 0
  margin-bottom 0
  position relative
  min-height 1200px