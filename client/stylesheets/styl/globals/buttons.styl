    color $fill-color
    &:hover
      background-color darken($secondary-color, 20%)
      color $fill-color
      &.active
      &:active
      &.focus
      &:focus
        background-color darken($secondary-color, 20%)
        color $fill-color
        &.focus
        &:focus
          background-color darken($secondary-color, 20%)
          color $fill-color
    &.active
    &:active
    &.focus
    &:focus
      background-color $secondary-color
      color $fill-color
      &.focus
      &:focus
        background-color $secondary-color
        color $fill-color

  &-info
