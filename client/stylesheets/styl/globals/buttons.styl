        background-color darken($primary-color, 20%)
        color $fill-color
        &.focus
        &:focus
          background-color darken($primary-color, 20%)
          color $fill-color
    &.active
    &:active
    &.focus
    &:focus
      background-color $primary-color
      color $fill-color
      &.focus
      &:focus
        background-color $primary-color
        color $fill-color

  &-secondary
