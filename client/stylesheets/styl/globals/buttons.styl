@import '../settings.import'

.btn
  border none
  background-image none
  box-shadow inset 0 -2px 0 0 $light-border-color
  text-shadow none
  outline none
  border-radius 3px
  background-clip padding-box
  transition box-shadow 0.1s ease-in-out 0s, background-color 0.1s ease-in-out 0s
  &.active
  &:active
  &.focus
  &:focus
    box-shadow none
    border none
  &.active
  &:active
    margin-top 2px
    padding-bottom 4px

  &-lg
    &.active
    &:active
      margin-top 2px
      padding-bottom 8px

  &-sm
    &.active
    &:active
      margin-top 2px
      padding-bottom 3px

  &-xs
    &.active
    &:active
      margin-top 1px
      padding-bottom 0

  &-default
    background-color $default-color
    color $fill-color
    &:hover
      background-color darken($default-color, 20%)
      color $fill-color
      &.active
      &:active
      &.focus
      &:focus
        background-color darken($default-color, 20%)
        color $fill-color
        &.focus
        &:focus
          background-color darken($default-color, 20%)
          color $fill-color
    &.active
    &:active
    &.focus
    &:focus
      background-color $default-color
      color $fill-color
      &.focus
      &:focus
        background-color $default-color
        color $fill-color

  &-empty
    box-shadow none
    background-color $fill-color
    border 1px solid $light-border-color
    color $black
    &:hover
      box-shadow none
      background-color $fill-color
      border 1px solid $border-color
      color $black

  &-primary
    background-color $primary-color
    color $fill-color
